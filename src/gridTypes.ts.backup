import { AbsoluteSize } from './types';

type Fr = `${number}fr`;

type BaseGridSize = Fr | AbsoluteSize | 'auto';

type FitContent = `fit-content(${AbsoluteSize})`;

type MinMax = `minmax(${BaseGridSize}, ${BaseGridSize})`;

type GridSize = BaseGridSize | FitContent | MinMax;

type Repeat = `repeat(${number | 'auto-fill' | 'auto-fit'}, ${GridSize})`;

type GridSizes =
	| `${BaseGridSize}`
	| `${BaseGridSize} ${BaseGridSize}`
	| `${BaseGridSize} ${BaseGridSize} ${BaseGridSize}`
	| `${BaseGridSize} ${BaseGridSize} ${BaseGridSize} ${BaseGridSize}`
	| `${BaseGridSize} ${BaseGridSize} ${BaseGridSize} ${BaseGridSize} ${BaseGridSize}`
	| `${BaseGridSize} ${BaseGridSize} ${BaseGridSize} ${BaseGridSize} ${BaseGridSize} ${BaseGridSize}`;

type GridTemplate = GridSizes | Repeat;
